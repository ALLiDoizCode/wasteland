# Agent Configuration

# Agent name (for logging)
AGENT_NAME=demo-agent-1

# Relay WebSocket URL
RELAY_URL=ws://localhost:7001

# Agent private key (hex, 64 characters)
# Leave empty to generate a new key on startup
AGENT_PRIVATE_KEY=

# ILP Configuration (optional for POC)
ILP_PAYMENT_POINTER=
ILP_AMOUNT=100

# Worker Configuration

# Polling interval for checking ready tasks (milliseconds)
POLLING_INTERVAL=5000

# Work duration range (seconds)
WORK_DURATION_MIN=2
WORK_DURATION_MAX=5

# Pubkey to notify when tasks complete (POLECAT_DONE messages)
NOTIFY_PUBKEY=
