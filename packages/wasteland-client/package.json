{
  "name": "@wasteland/client",
  "version": "0.0.1",
  "description": "TypeScript client library for Wasteland task and messaging on Nostr ILP",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nostr",
    "ilp",
    "task-management",
    "messaging",
    "wasteland"
  ],
  "author": "Jonathan Green",
  "license": "MIT",
  "dependencies": {
    "nostr-tools": "^2.20.0",
    "@crosstown/core": "^1.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0",
    "@types/ws": "^8.5.10"
  }
}
